{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "allowCompoundWords": true,
  "dictionaries": ["typescript", "node", "html", "css", "fonts", "npm", "softwareTerms"],
  "words": [
    "ABGR",
    "Ambilab",
    "antialiasing",
    "atlases",
    "bindgroup",
    "bindgroups",
    "biomejs",
    "bitwise",
    "blit",
    "bmfont",
    "Bresenham",
    "BTAPI",
    "btfont",
    "changesets",
    "Chebyshev",
    "Cietwierkowski",
    "codecov",
    "commitlint",
    "daafu",
    "dco",
    "dbaeumer",
    "esbuild",
    "Fabrizio",
    "framebuffer",
    "gamepad",
    "Hiero",
    "lerp",
    "millis",
    "mipmap",
    "nsis",
    "onuncapturederror",
    "palettized",
    "pnpm",
    "RBAPI",
    "rects",
    "retroblit",
    "RGBA",
    "rgba8unorm",
    "Rollup",
    "RRGGBB",
    "RRGGBBAA",
    "Schiavi",
    "spritesheet",
    "subsystem",
    "subsystems",
    "texcoord",
    "timestep",
    "unorm",
    "Vančura",
    "Vite",
    "Vitest",
    "Václav",
    "WebGPU",
    "webstorm",
    "WGSL",
    "xadvance",
    "xoffset",
    "yoffset"
  ],
  "flagWords": ["cant", "dont", "hte", "teh", "wont"],
  "ignorePaths": [
    "*.map",
    "*.min.js",
    ".changeset/*.md",
    ".git",
    ".pnpm-store",
    "CHANGELOG.md",
    "CLAUDE.md",
    "coverage",
    "dist",
    "node_modules",
    "pnpm-lock.yaml"
  ],
  "ignoreRegExpList": ["/#[0-9A-Fa-f]{3,8}/", "/0x[0-9A-Fa-f]+/", "/@[a-zA-Z0-9_-]+\\/[a-zA-Z0-9_-]+/"],
  "overrides": [
    {
      "filename": "**/*.ts",
      "words": ["instanceof", "keyof", "readonly", "typeof"]
    }
  ]
}
