{
    "name": "@vancura/blit-tech",
    "author": "Vaclav Vancura (https://github.com/vancura)",
    "description": "A Vite-powered website with optimized assets and comprehensive build tooling",
    "version": "0.1.0",
    "type": "module",
    "license": "UNLICENSED",
    "scripts": {
        "dev": "cross-env NODE_ENV=development vite",
        "start": "cross-env NODE_ENV=development vite",
        "prebuild": "rm -rf dist",
        "build": "yarn clean && cross-env NODE_ENV=production tsc && vite build",
        "preview": "cross-env NODE_ENV=production vite preview",
        "clean": "rm -rf dist dist-ssr .stats logs .yarn/cache .yarn/unplugged .yarn/build-state.yml && yarn cache clean",
        "clean:all": "yarn clean && rm -rf node_modules .pnp.* .env .env.*",
        "format": "prettier --write \"**/*.{js,ts,json,yml,yaml,md,html}\"",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix && prettier --write",
        "check": "yarn lint && yarn format --check && tsc --noEmit",
        "analyze": "rm -rf dist && cross-env NODE_ENV=production vite build --mode analyze",
        "typecheck": "tsc --noEmit",
        "setup": "yarn install && yarn dlx @yarnpkg/sdks vscode"
    },
    "dependencies": {
        "nanostores": "^0.11.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@types/eslint-plugin-tailwindcss": "^3",
        "@types/node": "^20.17.19",
        "@types/rollup-plugin-visualizer": "^4.2.4",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "@typescript-eslint/parser": "^8.24.0",
        "@vitejs/plugin-legacy": "^6.0.1",
        "cross-env": "^7.0.3",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsdoc": "^50.6.3",
        "eslint-plugin-n": "^17.15.1",
        "eslint-plugin-optimize-regex": "^1.2.1",
        "eslint-plugin-perfectionist": "^4.9.0",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-sonarjs": "^3.0.2",
        "eslint-plugin-tailwindcss": "^3.18.0",
        "postcss": "^8.5.2",
        "prettier": "^3.5.1",
        "prettier-plugin-jsdoc": "^1.3.2",
        "prettier-plugin-organize-attributes": "^1.0.0",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "rollup-plugin-visualizer": "^5.14.0",
        "sharp": "^0.33.5",
        "svgo": "^3.3.2",
        "tailwindcss": "^3.4.17",
        "terser": "^5.39.0",
        "typescript": "^5.8.0-dev.20250216",
        "vite": "^6.1.0",
        "vite-imagetools": "^7.0.5",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-fonts": "^0.7.0",
        "vite-plugin-image-optimizer": "^1.1.8",
        "vite-plugin-inspect": "^10.2.1",
        "vite-plugin-preload": "^0.4.2",
        "yaml-eslint-parser": "^1.2.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-darwin-arm64": "^4.34.7",
        "@rollup/rollup-darwin-x64": "^4.34.7",
        "@rollup/rollup-linux-x64-gnu": "^4.34.7",
        "@rollup/rollup-win32-x64-msvc": "^4.34.7"
    },
    "packageManager": "yarn@4.6.0"
}
