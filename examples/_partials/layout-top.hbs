<!doctype html>

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{title}}</title>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: 'Courier New', monospace;
                background: {{backgroundGradient}};
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 100vh;
                color: #fff;
            }

            .container {
                text-align: center;
                padding: 20px;
            }

            h1 {
                margin-bottom: 10px;
                font-size: 2em;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }

            #canvas-container {
                background: #000;
                border: 4px solid {{accentColor}};
                border-radius: 8px;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
                display: inline-block;
                margin: 20px 0;
            }

            canvas {
                display: block;
                image-rendering: pixelated;
                image-rendering: crisp-edges;
            }

            .info {
                background: rgba(0, 0, 0, 0.3);
                padding: 15px;
                border-radius: 8px;
                max-width: 600px;
                margin: 20px auto;
                text-align: left;
            }

            .info h3 {
                margin-bottom: 10px;
                color: {{infoHeadingColor}};
            }

            .info p {
                line-height: 1.6;
                margin-bottom: 10px;
            }

            .info ul {
                list-style-type: none;
                padding-left: 0;
            }

            .info li {
                padding: 5px 0;
                padding-left: 20px;
                position: relative;
            }

            .info li::before {
                content: '\25B8';
                position: absolute;
                left: 0;
                color: {{accentColor}};
            }

            .back-link {
                display: inline-block;
                margin-top: 20px;
                padding: 10px 20px;
                background: {{backLinkBg}};
                border: 2px solid {{accentColor}};
                border-radius: 5px;
                color: #fff;
                text-decoration: none;
                transition: all 0.3s ease;
            }

            .back-link:hover {
                background: {{backLinkHover}};
                transform: translateY(-2px);
            }

            code {
                background: rgba(255, 255, 255, 0.1);
                padding: 2px 6px;
                border-radius: 3px;
                font-family: 'Courier New', monospace;
            }

            .note {
                background: rgba(255, 200, 100, 0.2);
                border-left: 3px solid #ffc864;
                padding: 10px;
                margin-top: 15px;
                border-radius: 3px;
            }

            .patterns-grid {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 10px;
                margin-top: 15px;
            }

            .pattern-item {
                background: rgba(255, 255, 255, 0.1);
                padding: 8px;
                border-radius: 5px;
                font-size: 0.9em;
            }

            .pattern-item strong {
                color: {{infoHeadingColor}};
                display: block;
                margin-bottom: 3px;
            }
        </style>
    </head>

    <body>
        <div class="container">
            <h1>{{h1Title}}</h1>

            <div id="canvas-container">
                <canvas id="game-canvas" width="320" height="240"></canvas>
            </div>

            <div class="info"></div>
        </div>
    </body>
</html>
